    <meta charset="UTF-8">
    <title>Traductor Español-Inglés</title>
    <style>
        body { 
            font-family: Arial, sans-serif; 
            max-width: 400px; 
            margin: 50px auto; 
            padding: 20px; 
        }
        .input-group { 
            margin: 15px 0; 
        }
        input, select { 
            width: 100%; 
            padding: 10px; 
            margin: 5px 0; 
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        button { 
            background: #6c5ce7; 
            color: white; 
            padding: 12px; 
            border: none; 
            width: 100%; 
            cursor: pointer;
            border-radius: 4px;
            font-size: 16px;
            margin-top: 10px;
        }
        button:hover {
            background: #5649c2;
        }
        .result { 
            margin-top: 20px; 
            padding: 20px; 
            border-radius: 8px;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            background: #f8f9fa;
            border: 2px solid #6c5ce7;
        }
        .palabra-espanol {
            color: #6c5ce7;
        }
        .palabra-ingles {
            color: #e84393;
        }
    </style>
</head>
<body>
    <h2>Traductor Español-Inglés</h2>
    
    <div class="input-group">
        <select id="palabra">
            <option value="">Seleccione una palabra</option>
            <option value="casa">Casa</option>
            <option value="mesa">Mesa</option>
            <option value="perro">Perro</option>
            <option value="gato">Gato</option>
        </select>
    </div>
    
    <button onclick="traducir()">Traducir a Inglés</button>
    
    <div id="resultado" class="result"></div>

    <script>
        function traducir() {
            let palabra = document.getElementById('palabra').value;
            let resultado = document.getElementById('resultado');
            
            if (palabra === "") {
                alert('Por favor, seleccione una palabra');
                return;
            }
            
            let traduccion = "";
            
            // ESTRUCTURA SWITCH
            switch (palabra) {
                case "casa":
                    traduccion = "house";
                    break;
                case "mesa":
                    traduccion = "table";
                    break;
                case "perro":
                    traduccion = "dog";
                    break;
                case "gato":
                    traduccion = "cat";
                    break;
                default:
                    traduccion = "Palabra no encontrada";
            }
            
            resultado.innerHTML = 
                '<span class="palabra-espanol">' + palabra + '</span> → ' +
                '<span class="palabra-ingles">' + traduccion + '</span>';
        }
    </script>
</body>
</html>
