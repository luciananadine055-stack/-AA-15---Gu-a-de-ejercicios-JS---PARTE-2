<body>
    <h2>Verificador de Números</h2>
    
    <div class="input-group">
        <input type="number" id="numero1" placeholder="Primer número">
    </div>
    <div class="input-group">
        <input type="number" id="numero2" placeholder="Segundo número">
    </div>
    <div class="input-group">
        <input type="number" id="numero3" placeholder="Tercer número">
    </div>
    
    <button onclick="verificarNumeros()">Verificar Números</button>
    
    <div id="resultado" class="result"></div>

    <script>
        function verificarNumeros() {
            // Obtener los valores
            let num1 = parseInt(document.getElementById('numero1').value);
            let num2 = parseInt(document.getElementById('numero2').value);
            let num3 = parseInt(document.getElementById('numero3').value);
            
            // Validar datos
            if (isNaN(num1) || isNaN(num2) || isNaN(num3)) {
                alert('Por favor, complete todos los campos');
                return;
            }
            
            let resultado = document.getElementById('resultado');
            
            // OPERADOR LÓGICO OR (||)
            if (num1 < 10 || num2 < 10 || num3 < 10) {
                resultado.innerHTML = '⚠️ Alguno de los números es menor a diez';
                resultado.className = 'result menor';
            } else {
                resultado.innerHTML = '✅ Todos los números son mayores o iguales a 10';
                resultado.className = 'result mayor';
            }
        }
    </script>
</body>
