        <div class="input-group">
            <div class="vector">
                <input type="number" id="elem1" placeholder="Elem 1">
                <input type="number" id="elem2" placeholder="Elem 2">
                <input type="number" id="elem3" placeholder="Elem 3">
                <input type="number" id="elem4" placeholder="Elem 4">
                <input type="number" id="elem5" placeholder="Elem 5">
                <input type="number" id="elem6" placeholder="Elem 6">
                <input type="number" id="elem7" placeholder="Elem 7">
                <input type="number" id="elem8" placeholder="Elem 8">
            </div>
        </div>
        
        <button onclick="analizarVector()">Analizar Vector</button>
        
        <div id="resultado" class="resultado"></div>
    </div>

    <script>
        function analizarVector() {
            // CREAR VECTOR (array) con 8 elementos
            let vector = [];
            
            // Llenar el vector con los valores ingresados
            for (let i = 1; i <= 8; i++) {
                let valor = parseInt(document.getElementById(`elem${i}`).value);
                if (isNaN(valor)) {
                    alert(`Por favor, ingrese un valor válido para el elemento ${i}`);
                    return;
                }
                vector.push(valor);
            }
            
            // VARIABLES ACUMULADORAS
            let sumaTotal = 0;
            let sumaMayores36 = 0;
            let contadorMayores50 = 0;
            
            // RECORRER EL VECTOR y realizar cálculos
            for (let i = 0; i < vector.length; i++) {
                let elemento = vector[i];
                
                // Acumular suma total
                sumaTotal += elemento;
                
                // Acumular suma de elementos > 36
                if (elemento > 36) {
                    sumaMayores36 += elemento;
                }
                
                // Contar elementos > 50
                if (elemento > 50) {
                    contadorMayores50++;
                }
            }
            
            // Mostrar resultados
            mostrarResultados(vector, sumaTotal, sumaMayores36, contadorMayores50);
        }
        
        function mostrarResultados(vector, sumaTotal, sumaMayores36, contadorMayores50) {
            let html = '<h3>Vector ingresado:</h3><div class="vector">';
            
            // Mostrar vector con colores según condiciones
            for (let i = 0; i < vector.length; i++) {
                let clase = 'elemento';
                if (vector[i] > 50) {
                    clase += ' mayor50';
                } else if (vector[i] > 36) {
                    clase += ' mayor36';
                }
                html += `<div class="${clase}">${vector[i]}</div>`;
            }
            
            html += '</div>';
            
            // Mostrar estadísticas
            html += `
                <div class="estadistica">
                    <h3>Resultados del Análisis:</h3>
                    <p><strong>Suma total de todos los elementos:</strong> ${sumaTotal}</p>
                    <p><strong>Suma de elementos mayores a 36:</strong> ${sumaMayores36}</p>
                    <p><strong>Cantidad de valores mayores a 50:</strong> ${contadorMayores50}</p>
                </div>
            `;
            
            document.getElementById('resultado').innerHTML = html;
        }
    </script>
