    <div class="formulario">
        <h1>Calculadora de Cubo</h1>
        
        <div class="instrucciones">
            <h3>CONTROLES: FORM, BUTTON y TEXT</h3>
            <p>Ingresa un n√∫mero entero y presiona el bot√≥n para calcular su valor al cubo.</p>
        </div>

        <!-- FORM con controles TEXT y BUTTON -->
        <form onsubmit="calcularCubo(); return false;">
            <div class="control-group">
                <label for="numero">Ingrese un n√∫mero entero:</label>
                <input type="text" id="numero" placeholder="Ej: 5">
            </div>
            
            <button type="submit">Calcular Cubo</button>
        </form>
        
        <div class="ejemplos">
            <p><strong>Ejemplos:</strong></p>
            <p>2¬≥ = 8 | 3¬≥ = 27 | 5¬≥ = 125 | 10¬≥ = 1000</p>
        </div>
        
        <div id="ultimoResultado" class="ultimo-resultado" style="display: none;">
            √öltimo c√°lculo aparecer√° aqu√≠
        </div>
    </div>

    <script>
        function calcularCubo() {
            // Obtener el valor del control TEXT
            const numeroInput = document.getElementById('numero');
            const valor = numeroInput.value.trim();
            
            // Validar que no est√© vac√≠o
            if (valor === '') {
                alert('‚ö†Ô∏è Por favor, ingrese un n√∫mero');
                numeroInput.focus();
                return;
            }
            
            // Validar que sea un n√∫mero entero
            const numero = parseInt(valor);
            if (isNaN(numero)) {
                alert('‚ùå Error: Debe ingresar un n√∫mero entero v√°lido');
                numeroInput.focus();
                numeroInput.select();
                return;
            }
            
            // Calcular el cubo usando Math.pow
            const cubo = Math.pow(numero, 3);
            
            // Mostrar resultado usando ALERT (como pide el ejercicio)
            alert(`üéØ RESULTADO:\n${numero} elevado al cubo es: ${cubo}\n\n${numero}¬≥ = ${cubo}`);
            
            // Tambi√©n mostrar en pantalla (opcional)
            mostrarUltimoResultado(numero, cubo);
            
            // Limpiar el campo para nuevo ingreso
            numeroInput.value = '';
            numeroInput.focus();
        }
        
        function mostrarUltimoResultado(numero, cubo) {
            const ultimoResultado = document.getElementById('ultimoResultado');
            ultimoResultado.innerHTML = `
                <strong>√öltimo c√°lculo:</strong><br>
                ${numero}¬≥ = ${cubo}
            `;
            ultimoResultado.style.display = 'block';
        }
        
        // Enfocar el campo de texto al cargar la p√°gina
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('numero').focus();
        });
        
        // Validar entrada mientras se escribe (solo n√∫meros)
        document.getElementById('numero').addEventListener('input', function(e) {
            // Permitir solo n√∫meros y signo negativo
            this.value = this.value.replace(/[^0-9\-]/g, '');
            
            // Evitar m√∫ltiples signos negativos
            if (this.value.split('-').length > 2) {
                this.value = this.value.replace(/-/g, '');
                this.value = '-' + this.value.replace(/-/g, '');
            }
        });
    </script>
