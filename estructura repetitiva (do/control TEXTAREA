<body>
    <div class="formulario">
        <h1>üìù Formulario de Visitas</h1>
        
        <div class="instrucciones">
            <h3>CONTROL TEXTAREA</h3>
            <p>Completa el formulario para dejar tu visita y comentarios en nuestro sitio.</p>
        </div>

        <form onsubmit="mostrarDatos(); return false;">
            <div class="control-group">
                <label for="nombre">Nombre completo:</label>
                <input type="text" id="nombre" placeholder="Ingresa tu nombre" required>
                <div class="requisito">* Campo obligatorio</div>
            </div>
            
            <div class="control-group">
                <label for="email">Correo electr√≥nico:</label>
                <input type="email" id="email" placeholder="ejemplo@correo.com" required>
                <div class="requisito">* Campo obligatorio</div>
            </div>
            
            <div class="control-group">
                <label for="comentarios">Comentarios:</label>
                <textarea id="comentarios" placeholder="Escribe tus comentarios, sugerencias o preguntas aqu√≠..." maxlength="500"></textarea>
                <div class="contador">
                    <span id="contadorCaracteres">0</span>/500 caracteres
                </div>
            </div>
            
            <button type="submit">Enviar Visita</button>
        </form>
    </div>

    <script>
        // Contador de caracteres para el TEXTAREA
        const textarea = document.getElementById('comentarios');
        const contador = document.getElementById('contadorCaracteres');
        
        textarea.addEventListener('input', function() {
            const longitud = this.value.length;
            contador.textContent = longitud;
            
            // Cambiar color cuando se acerca al l√≠mite
            if (longitud > 450) {
                contador.style.color = '#e17055';
            } else if (longitud > 400) {
                contador.style.color = '#fdcb6e';
            } else {
                contador.style.color = '#636e72';
            }
        });
        
        function mostrarDatos() {
            // Obtener valores de los controles
            const nombre = document.getElementById('nombre').value.trim();
            const email = document.getElementById('email').value.trim();
            const comentarios = document.getElementById('comentarios').value.trim();
            
            // Validar campos obligatorios
            if (nombre === '' || email === '') {
                alert('‚ö†Ô∏è Por favor, completa los campos obligatorios (Nombre y Email)');
                return;
            }
            
            // Validar formato de email b√°sico
            if (!email.includes('@') || !email.includes('.')) {
                alert('‚ùå Por favor, ingresa un correo electr√≥nico v√°lido');
                document.getElementById('email').focus();
                return;
            }
            
            // Preparar mensaje para el ALERT
            let mensaje = `üéâ ¬°VISITA REGISTRADA!\n\n`;
            mensaje += `üìã **Datos del visitante:**\n`;
            mensaje += `‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ\n`;
            mensaje += `üë§ **Nombre:** ${nombre}\n`;
            mensaje += `üìß **Email:** ${email}\n`;
            mensaje += `üí¨ **Comentarios:** ${comentarios || 'No se ingresaron comentarios'}\n`;
            mensaje += `‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ\n`;
            mensaje += `¬°Gracias por visitarnos! üéä`;
            
            // Mostrar ALERT con los datos
            alert(mensaje);
            
            // Opcional: limpiar formulario despu√©s del env√≠o
            setTimeout(() => {
                document.getElementById('nombre').value = '';
                document.getElementById('email').value = '';
                document.getElementById('comentarios').value = '';
                contador.textContent = '0';
                contador.style.color = '#636e72';
                document.getElementById('nombre').focus();
            }, 100);
        }
        
        // Enfocar el primer campo al cargar
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('nombre').focus();
        });
    </script>
