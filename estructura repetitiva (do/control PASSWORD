<body>
    <div class="formulario">
        <h1>Validador de Contraseñas</h1>
        
        <div class="instrucciones">
            <h3>CONTROL PASSWORD</h3>
            <p>Ingresa tu contraseña dos veces para verificar que coincidan.</p>
        </div>

        <form onsubmit="validarPasswords(); return false;">
            <div class="control-group">
                <label for="password1">Contraseña:</label>
                <input type="password" id="password1" placeholder="Ingresa tu contraseña" required>
            </div>
            
            <div class="control-group">
                <label for="password2">Confirmar Contraseña:</label>
                <input type="password" id="password2" placeholder="Repite tu contraseña" required>
            </div>
            
            <button type="submit">Validar Contraseñas</button>
        </form>
        
        <div id="resultado" class="resultado"></div>
        
        <div class="requisitos">
            <p><strong>Requisitos de seguridad:</strong></p>
            <p>✓ Las contraseñas deben coincidir exactamente</p>
            <p>✓ Se recomienda usar mayúsculas, números y símbolos</p>
            <p>✓ Mínimo 8 caracteres</p>
        </div>
    </div>

    <script>
        function validarPasswords() {
            // Obtener valores de los campos PASSWORD
            const password1 = document.getElementById('password1').value;
            const password2 = document.getElementById('password2').value;
            const resultado = document.getElementById('resultado');
            
            // Validar que no estén vacíos
            if (password1 === '' || password2 === '') {
                alert('⚠️ Por favor, completa ambos campos de contraseña');
                return;
            }
            
            // OPERADOR == para comparar strings
            if (password1 == password2) {
                // Contraseñas IGUALES
                resultado.innerHTML = `
                    <span class="icono">✅</span>
                    ¡Las contraseñas COINCIDEN!
                    <br>
                    <small>Puedes proceder con el registro</small>
                `;
                resultado.className = 'resultado iguales';
            } else {
                // Contraseñas DIFERENTES
                resultado.innerHTML = `
                    <span class="icono">❌</span>
                    Las contraseñas NO COINCIDEN
                    <br>
                    <small>Por favor, verifica que sean iguales</small>
                `;
                resultado.className = 'resultado diferentes';
            }
            
            // Mostrar el resultado
            resultado.style.display = 'block';
            
            // Desplazarse al resultado
            resultado.scrollIntoView({ behavior: 'smooth' });
        }
        
        // Limpiar resultado cuando el usuario empiece a escribir
        document.getElementById('password1').addEventListener('input', limpiarResultado);
        document.getElementById('password2').addEventListener('input', limpiarResultado);
        
        function limpiarResultado() {
            document.getElementById('resultado').style.display = 'none';
        }
        
        // Validar con la tecla Enter en cualquier campo
        document.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                validarPasswords();
            }
        });
    </script>
</body>
