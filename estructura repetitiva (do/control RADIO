<body>
    <div class="formulario">
        <h1>Validador de Edad</h1>
        
        <div class="instrucciones">
            <h3>CONTROL RADIO BUTTON</h3>
            <p>Selecciona una opci√≥n para verificar si puedes ingresar al sitio:</p>
        </div>

        <form onsubmit="validarEdad(); return false;">
            <div class="radio-group">
                <h3>¬øEres mayor de 18 a√±os?</h3>
                
                <div class="opcion">
                    <label>
                        <input type="radio" name="edad" id="mayor" value="si">
                        <span class="icono">‚úÖ</span> S√≠, soy mayor de 18 a√±os
                    </label>
                </div>
                
                <div class="opcion">
                    <label>
                        <input type="radio" name="edad" id="menor" value="no">
                        <span class="icono">‚ùå</span> No, soy menor de 18 a√±os
                    </label>
                </div>
            </div>
            
            <div id="seleccionActual" class="seleccion-actual">
                <!-- Aqu√≠ se muestra la selecci√≥n actual -->
            </div>
            
            <button type="submit" id="botonValidar" disabled>Verificar Acceso</button>
        </form>
    </div>

    <script>
        // Obtener elementos
        const radioMayor = document.getElementById('mayor');
        const radioMenor = document.getElementById('menor');
        const botonValidar = document.getElementById('botonValidar');
        const seleccionActual = document.getElementById('seleccionActual');
        
        // Habilitar bot√≥n cuando se seleccione una opci√≥n
        const radios = document.querySelectorAll('input[name="edad"]');
        radios.forEach(radio => {
            radio.addEventListener('change', function() {
                // Habilitar el bot√≥n
                botonValidar.disabled = false;
                
                // Mostrar selecci√≥n actual
                if (this.value === 'si') {
                    seleccionActual.innerHTML = '‚úÖ Seleccionado: Mayor de 18 a√±os';
                } else {
                    seleccionActual.innerHTML = '‚ùå Seleccionado: Menor de 18 a√±os';
                }
                seleccionActual.style.display = 'block';
            });
        });
        
        function validarEdad() {
            let mensaje = '';
            
            // Verificar qu√© RADIO BUTTON est√° seleccionado
            if (radioMayor.checked) {
                mensaje = 'üéâ ¬°ACCESO PERMITIDO!\n\nEres mayor de 18 a√±os.\nPuedes ingresar al sitio.';
            } else if (radioMenor.checked) {
                mensaje = 'üö´ ¬°ACCESO DENEGADO!\n\nEres menor de 18 a√±os.\nNo puedes ingresar al sitio.';
            } else {
                alert('‚ö†Ô∏è Por favor, selecciona una opci√≥n');
                return;
            }
            
            // Mostrar ALERT con el resultado
            alert(mensaje);
            
            // Opcional: resetear despu√©s de mostrar
            setTimeout(() => {
                // radios.forEach(radio => radio.checked = false);
                // botonValidar.disabled = true;
                // seleccionActual.style.display = 'none';
            }, 100);
        }
        
        // Tambi√©n se puede validar con Enter
        document.addEventListener('keypress', function(e) {
            if (e.key === 'Enter' && !botonValidar.disabled) {
                validarEdad();
            }
        });
    </script>
