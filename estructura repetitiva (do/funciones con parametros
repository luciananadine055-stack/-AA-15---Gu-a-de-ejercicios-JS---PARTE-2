<body>
    <div class="instrucciones">
        <h3>Encontrar el Menor de Tres Números</h3>
        <p>Ingrese tres números enteros y la función determinará cuál es el menor.</p>
    </div>

    <div class="input-group">
        <label>Número 1:</label>
        <input type="number" id="num1" placeholder="Primero">
    </div>
    
    <div class="input-group">
        <label>Número 2:</label>
        <input type="number" id="num2" placeholder="Segundo">
    </div>
    
    <div class="input-group">
        <label>Número 3:</label>
        <input type="number" id="num3" placeholder="Tercero">
    </div>
    
    <button onclick="encontrarMenor()">Encontrar el Menor</button>
    
    <div id="resultado" class="resultado"></div>

    <script>
        // FUNCIÓN con parámetros que encuentra el menor de tres números
        function encontrarMenorDeTres(a, b, c) {
            let menor = a; // Asumimos que el primero es el menor
            
            // Comparamos con el segundo número
            if (b < menor) {
                menor = b;
            }
            
            // Comparamos con el tercer número
            if (c < menor) {
                menor = c;
            }
            
            return menor;
        }
        
        // Función alternativa usando Math.min
        function encontrarMenorMath(a, b, c) {
            return Math.min(a, b, c);
        }
        
        // Función principal que se ejecuta al hacer clic
        function encontrarMenor() {
            // Obtener valores de los inputs
            const num1 = parseInt(document.getElementById('num1').value);
            const num2 = parseInt(document.getElementById('num2').value);
            const num3 = parseInt(document.getElementById('num3').value);
            
            // Validar que sean números
            if (isNaN(num1) || isNaN(num2) || isNaN(num3)) {
                alert('Por favor, ingrese los tres números');
                return;
            }
            
            // LLAMAR A LA FUNCIÓN con parámetros
            const menor = encontrarMenorDeTres(num1, num2, num3);
            
            // Mostrar resultado
            const resultado = document.getElementById('resultado');
            resultado.innerHTML = `
                <h3>Números ingresados:</h3>
                <div>
                    <span class="numero ${menor === num1 ? 'menor' : ''}">${num1}</span>
                    <span class="numero ${menor === num2 ? 'menor' : ''}">${num2}</span>
                    <span class="numero ${menor === num3 ? 'menor' : ''}">${num3}</span>
                </div>
                <h3 style="margin-top: 20px;">El número menor es: <span style="color: #e17055;">${menor}</span></h3>
            `;
        }
    </script>
