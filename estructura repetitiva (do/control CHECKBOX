<body>
    <div class="formulario">
        <h1>Selecci√≥n de Deportes</h1>
        
        <div class="instrucciones">
            <h3>CONTROL CHECKBOX</h3>
            <p>Selecciona los deportes que practicas (puedes elegir varios):</p>
        </div>

        <form onsubmit="mostrarDeportes(); return false;">
            <div class="deportes-container">
                <div class="checkbox-group">
                    <label>
                        <input type="checkbox" id="futbol" value="F√∫tbol">
                        <span class="icono-deporte">‚öΩ</span> F√∫tbol
                    </label>
                </div>
                
                <div class="checkbox-group">
                    <label>
                        <input type="checkbox" id="basket" value="B√°squet">
                        <span class="icono-deporte">üèÄ</span> B√°squet
                    </label>
                </div>
                
                <div class="checkbox-group">
                    <label>
                        <input type="checkbox" id="tenis" value="Tenis">
                        <span class="icono-deporte">üéæ</span> Tenis
                    </label>
                </div>
            </div>
            
            <button type="submit">Mostrar Deportes Seleccionados</button>
        </form>
        
        <div id="resultado" class="resultado">
            <!-- Aqu√≠ se mostrar√°n los resultados -->
        </div>
    </div>

    <script>
        function mostrarDeportes() {
            // Array para almacenar deportes seleccionados
            let deportesSeleccionados = [];
            
            // Verificar cada CHECKBOX
            const futbol = document.getElementById('futbol');
            const basket = document.getElementById('basket');
            const tenis = document.getElementById('tenis');
            
            // Usar propiedad 'checked' para verificar selecci√≥n
            if (futbol.checked) {
                deportesSeleccionados.push(futbol.value);
            }
            if (basket.checked) {
                deportesSeleccionados.push(basket.value);
            }
            if (tenis.checked) {
                deportesSeleccionados.push(tenis.value);
            }
            
            // Mostrar resultados
            mostrarResultados(deportesSeleccionados);
        }
        
        function mostrarResultados(deportes) {
            const resultado = document.getElementById('resultado');
            let html = '<h3>üèÜ Deportes que practicas:</h3>';
            
            if (deportes.length === 0) {
                html += `
                    <div class="deporte-item ninguno">
                        ‚ö†Ô∏è No seleccionaste ning√∫n deporte
                    </div>
                `;
            } else {
                // Mostrar cada deporte seleccionado
                deportes.forEach(deporte => {
                    let icono = '';
                    if (deporte === 'F√∫tbol') icono = '‚öΩ';
                    else if (deporte === 'B√°squet') icono = 'üèÄ';
                    else if (deporte === 'Tenis') icono = 'üéæ';
                    
                    html += `
                        <div class="deporte-item">
                            ${icono} ${deporte}
                        </div>
                    `;
                });
            }
            
            // Agregar contador
            html += `
                <div class="contador">
                    Total de deportes seleccionados: <strong>${deportes.length}</strong>
                </div>
            `;
            
            resultado.innerHTML = html;
            resultado.style.display = 'block';
            
            // Desplazarse al resultado
            resultado.scrollIntoView({ behavior: 'smooth' });
        }
        
        // Mostrar/ocultar resultado cuando cambie alguna selecci√≥n
        const checkboxes = document.querySelectorAll('input[type="checkbox"]');
        checkboxes.forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                document.getElementById('resultado').style.display = 'none';
            });
        });
    </script>
