<body>
    <div class="instrucciones">
        <h3>Función que Retorna el Mayor de Tres Números</h3>
        <p>Ingrese tres números enteros. La función calculará y <strong>retornará</strong> el mayor de ellos.</p>
    </div>

    <div class="input-group">
        <label>Número 1:</label>
        <input type="number" id="num1" placeholder="Primero">
    </div>
    
    <div class="input-group">
        <label>Número 2:</label>
        <input type="number" id="num2" placeholder="Segundo">
    </div>
    
    <div class="input-group">
        <label>Número 3:</label>
        <input type="number" id="num3" placeholder="Tercero">
    </div>
    
    <button onclick="encontrarMayor()">Encontrar el Mayor</button>
    
    <div id="resultado" class="resultado"></div>

    <script>
        // FUNCIÓN que RETORNA el mayor de tres números
        function encontrarMayorDeTres(a, b, c) {
            let mayor = a; // Asumimos que el primero es el mayor
            
            // Comparamos con el segundo número
            if (b > mayor) {
                mayor = b;
            }
            
            // Comparamos con el tercer número
            if (c > mayor) {
                mayor = c;
            }
            
            // RETORNAMOS el valor
            return mayor;
        }
        
        // Función alternativa usando Math.max
        function encontrarMayorMath(a, b, c) {
            return Math.max(a, b, c);
        }
        
        // Función principal que usa el valor retornado
        function encontrarMayor() {
            // Obtener valores de los inputs
            const num1 = parseInt(document.getElementById('num1').value);
            const num2 = parseInt(document.getElementById('num2').value);
            const num3 = parseInt(document.getElementById('num3').value);
            
            // Validar que sean números
            if (isNaN(num1) || isNaN(num2) || isNaN(num3)) {
                alert('Por favor, ingrese los tres números');
                return;
            }
            
            // LLAMAR A LA FUNCIÓN y CAPTURAR el valor RETORNADO
            const mayor = encontrarMayorDeTres(num1, num2, num3);
            
            // Mostrar resultado usando el valor retornado
            const resultado = document.getElementById('resultado');
            resultado.innerHTML = `
                <h3>Números ingresados:</h3>
                <div>
                    <span class="numero ${mayor === num1 ? 'mayor' : ''}">${num1}</span>
                    <span class="numero ${mayor === num2 ? 'mayor' : ''}">${num2}</span>
                    <span class="numero ${mayor === num3 ? 'mayor' : ''}">${num3}</span>
                </div>
                <h3 style="margin-top: 20px;">El número mayor es: <span style="color: #00b894;">${mayor}</span></h3>
            `;
        }
    </script>
