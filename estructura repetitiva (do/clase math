<body>
    <div class="container">
        <h1>Calculadora de Potencia al Cubo</h1>
        
        <div class="instrucciones">
            <h3>CLASE MATH - Potenciación</h3>
            <p>Ingrese un número y el programa calculará su valor elevado a la tercera potencia (al cubo).</p>
        </div>

        <div class="input-group">
            <input type="number" id="numero" placeholder="Ingrese un número" step="any">
        </div>
        
        <button onclick="calcularCubo()">Calcular al Cubo</button>
        
        <div id="resultado"></div>
    </div>

    <script>
        function calcularCubo() {
            // Obtener el número ingresado
            const numeroInput = document.getElementById('numero');
            const numero = parseFloat(numeroInput.value);
            
            // Validar que sea un número
            if (isNaN(numero)) {
                alert('Por favor, ingrese un número válido');
                numeroInput.focus();
                return;
            }
            
            // CLASE MATH - Calcular potencia al cubo
            const cubo = Math.pow(numero, 3);
            
            // Mostrar resultado
            mostrarResultado(numero, cubo);
        }
        
        function mostrarResultado(numero, cubo) {
            const resultado = document.getElementById('resultado');
            
            resultado.innerHTML = `
                <div class="formula">
                    <span class="numero">${numero}</span>³ = 
                    <span class="numero">${numero}</span> × 
                    <span class="numero">${numero}</span> × 
                    <span class="numero">${numero}</span>
                </div>
                
                <div class="resultado">
                    <span class="numero">${numero}</span> elevado a la tercera potencia es: 
                    <br>
                    <span class="resultado-final">${cubo}</span>
                </div>
                
                <div style="margin-top: 15px; font-size: 14px; color: #666;">
                    <em>Usando: Math.pow(${numero}, 3) = ${cubo}</em>
                </div>
            `;
        }
        
        // Permitir calcular con Enter
        document.getElementById('numero').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                calcularCubo();
            }
        });
    </script>
</body>
