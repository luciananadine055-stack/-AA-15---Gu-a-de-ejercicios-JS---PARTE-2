<body>
    <div class="container">
        <h1>Contador de Nombres</h1>
        
        <div class="instrucciones">
            <h3>CLASE STRING - Comparación de texto</h3>
            <p>Ingrese nombres uno por uno. Para finalizar, escriba: <strong>"Fin"</strong></p>
            <p>El programa contará cuántos nombres se ingresaron (excluyendo "Fin").</p>
        </div>

        <button onclick="iniciarIngreso()">Comenzar a Ingresar Nombres</button>
        
        <div id="resultado"></div>
    </div>

    <script>
        function iniciarIngreso() {
            // Array para almacenar nombres
            let nombres = [];
            let nombre;
            
            // Bucle DO/WHILE para ingresar nombres
            do {
                // Pedir nombre al usuario
                nombre = prompt("Ingrese un nombre (escriba 'Fin' para terminar):");
                
                // Validar que no sea vacío
                if (nombre === null || nombre.trim() === "") {
                    alert("Por favor, ingrese un nombre válido");
                    continue;
                }
                
                // CLASE STRING - Convertir a minúsculas y comparar
                // para que "Fin", "FIN", "fin" funcionen igual
                if (nombre.toLowerCase() !== "fin") {
                    nombres.push(nombre);
                }
                
            } while (nombre.toLowerCase() !== "fin"); // Continuar mientras no sea "Fin"
            
            // Mostrar resultados
            mostrarResultados(nombres);
        }
        
        function mostrarResultados(nombres) {
            const resultado = document.getElementById('resultado');
            
            let html = `
                <div class="fin-mensaje">
                    ✅ Se ingresó la palabra "Fin". Carga finalizada.
                </div>
            `;
            
            // Mostrar lista de nombres si hay alguno
            if (nombres.length > 0) {
                html += `
                    <div class="lista-nombres">
                        <h3>Nombres ingresados (${nombres.length}):</h3>
                `;
                
                nombres.forEach((nombre, index) => {
                    html += `<div class="nombre-item">${index + 1}. ${nombre}</div>`;
                });
                
                html += `</div>`;
            }
            
            // Mostrar contador
            html += `
                <div class="contador">
                    Total de nombres ingresados: ${nombres.length}
                </div>
            `;
            
            resultado.innerHTML = html;
        }
    </script>
</body>
