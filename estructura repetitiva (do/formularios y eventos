    <script>
        let contadorClicks = 0;
        
        function mostrarMensaje(numeroBoton) {
            contadorClicks++;
            
            const mensaje = document.getElementById('mensaje');
            const contadorElement = document.getElementById('contador');
            
            // Cambiar mensaje seg√∫n el bot√≥n presionado
            let textoMensaje = '';
            let claseColor = '';
            
            switch(numeroBoton) {
                case 1:
                    textoMensaje = '‚úÖ ¬°Presionaste el BOT√ìN 1!';
                    claseColor = 'boton-1';
                    break;
                case 2:
                    textoMensaje = 'üîµ ¬°Presionaste el BOT√ìN 2!';
                    claseColor = 'boton-2';
                    break;
                case 3:
                    textoMensaje = 'üü¢ ¬°Presionaste el BOT√ìN 3!';
                    claseColor = 'boton-3';
                    break;
            }
            
            // Actualizar mensaje
            mensaje.innerHTML = textoMensaje;
            mensaje.className = 'mensaje mensaje-activo';
            mensaje.style.borderLeft = `5px solid ${getComputedStyle(document.querySelector('.boton-' + numeroBoton)).backgroundColor}`;
            
            // Actualizar contador
            contadorElement.textContent = contadorClicks;
            
            // Efecto visual temporal
            mensaje.style.transform = 'scale(1.05)';
            setTimeout(() => {
                mensaje.style.transform = 'scale(1)';
            }, 200);
        }
        
        // Tambi√©n se puede usar addEventListener (m√©todo alternativo)
        document.addEventListener('DOMContentLoaded', function() {
            // Este es otro modo de manejar eventos
            console.log('Formulario cargado y listo');
        });
    </script>
