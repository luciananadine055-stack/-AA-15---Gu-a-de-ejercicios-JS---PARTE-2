function mostrarConDocumentWrite() {
    // Abrir una nueva ventana
    let nuevaVentana = window.open('', '_blank', 'width=500,height=300');
    
    // Escribir en la nueva ventana usando document.write()
    nuevaVentana.document.write('&lt;h2&gt;Información Personal&lt;/h2&gt;');
    nuevaVentana.document.write('&lt;strong&gt;Nombre:&lt;/strong&gt; Juan Pérez&lt;br&gt;');
    nuevaVentana.document.write('&lt;strong&gt;Edad:&lt;/strong&gt; 28 años&lt;br&gt;');
    nuevaVentana.document.write('&lt;br&gt;&lt;button onclick=\"window.close()\"&gt;Cerrar&lt;/button&gt;');
    nuevaVentana.document.close();
}</code></pre>
