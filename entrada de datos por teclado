    <script>
        function mostrarDatos() {
            // Obtener valores de los campos de entrada
            let nombre = document.getElementById('nombre').value;
            let email = document.getElementById('email').value;
            
            // Validar que los campos no estén vacíos
            if (nombre.trim() === '' || email.trim() === '') {
                alert('Por favor, completa todos los campos');
                return;
            }
            
            // Validar formato de email básico
            if (!email.includes('@') || !email.includes('.')) {
                alert('Por favor, ingresa un correo electrónico válido');
                return;
            }
            
            // Mostrar los datos en la página
            document.getElementById('resultNombre').textContent = nombre;
            document.getElementById('resultEmail').textContent = email;
            document.getElementById('resultContainer').style.display = 'block';
            
            // Desplazarse suavemente hacia los resultados
            document.getElementById('resultContainer').scrollIntoView({ 
                behavior: 'smooth' 
            });
        }
        
        // Permitir enviar el formulario con la tecla Enter
        document.getElementById('userForm').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                mostrarDatos();
            }
        });
        
        // Enfocar el primer campo al cargar la página
        document.getElementById('nombre').focus();
    </script>
