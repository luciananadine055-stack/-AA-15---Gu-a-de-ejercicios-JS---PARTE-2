        let dia = parseInt(prompt('Ingrese el dÃ­a:'));
        let mes = parseInt(prompt('Ingrese el mes:'));
        let anio = parseInt(prompt('Ingrese el aÃ±o:'));
        
        // ESTRUCTURAS CONDICIONALES ANIDADAS
        if (mes === 12) {
            if (dia === 25) {
                document.write('<h1>ðŸŽ„ Â¡FELIZ NAVIDAD! ðŸŽ…</h1>');
                document.write('<p>25 de Diciembre de ' + anio + '</p>');
