<body>
    <div class="container">
        <h1>Variables de Empleado</h1>
        
        <div class="info-card">
            <h2>Información del Empleado</h2>
            <div class="variable-display">
                <span class="variable-name">Nombre:</span>
                <span class="variable-value" id="nombreDisplay">María González</span>
            </div>
            <div class="variable-display">
                <span class="variable-name">Sueldo:</span>
                <span class="variable-value" id="sueldoDisplay">$2,500.00</span>
            </div>
        </div>
        
        <div class="btn-container">
            <button class="btn" onclick="mostrarConAlert()">Mostrar con alert()</button>
            <button class="btn" onclick="mostrarEnPagina()">Mostrar en página</button>
            <button class="btn" onclick="mostrarConDocumentWrite()">Mostrar con document.write()</button>
        </div>
        
        <div class="output-container">
            <div class="output-title">Salida:</div>
            <div id="output"></div>
        </div>
        
        <div class="code-container">
            <pre><code>// Definición de variables
<span class="code-comment">// Variable de tipo cadena para el nombre</span>
let nombreEmpleado = "María González";

<span class="code-comment">// Variable de tipo entero para el sueldo</span>
let sueldoEmpleado = 2500;

<span class="code-comment">// Mostrar variables en líneas distintas</span>
function mostrarVariables() {
    console.log(nombreEmpleado);
    console.log(sueldoEmpleado);
    
    <span class="code-comment">// O usando alert()</span>
    alert(nombreEmpleado + "\n" + sueldoEmpleado);
    
    <span class="code-comment">// O usando document.write()</span>
    document.write(nombreEmpleado + "&lt;br&gt;");
    document.write(sueldoEmpleado + "&lt;br&gt;");
}</code></pre>
        </div>
    </div>

    <script>
        // Definición e inicialización de variables
        let nombreEmpleado = "María González";
        let sueldoEmpleado = 2500;
        
        // Función para mostrar con alert()
        function mostrarConAlert() {
            alert("Nombre: " + nombreEmpleado + "\nSueldo: $" + sueldoEmpleado);
        }
        
        // Función para mostrar en la página
        function mostrarEnPagina() {
            const output = document.getElementById('output');
            output.innerHTML = `
                <div class="variable-display">
                    <span class="variable-name">Nombre:</span>
                    <span class="variable-value">${nombreEmpleado}</span>
                </div>
                <div class="variable-display">
                    <span class="variable-name">Sueldo:</span>
                    <span class="variable-value">$${sueldoEmpleado.toLocaleString()}</span>
                </div>
            `;
        }
        
        // Función para mostrar con document.write()
        function mostrarConDocumentWrite() {
            // Abrir una nueva ventana
            let nuevaVentana = window.open('', '_blank', 'width=500,height=300');
            
            // Escribir en la nueva ventana usando document.write()
            nuevaVentana.document.write('<html><head><title>Variables de Empleado</title>');
            nuevaVentana.document.write('<style>body { font-family: Arial, sans-serif; padding: 20px; }</style>');
            nuevaVentana.document.write('</head><body>');
            nuevaVentana.document.write('<h2>Variables de Empleado</h2>');
            nuevaVentana.document.write('<strong>Nombre:</strong> ' + nombreEmpleado + '<br>');
            nuevaVentana.document.write('<strong>Sueldo:</strong> $' + sueldoEmpleado + '<br>');
            nuevaVentana.document.write('<br><button onclick="window.close()">Cerrar</button>');
            nuevaVentana.document.write('</body></html>');
            nuevaVentana.document.close();
        }
        
        // Mostrar información inicial en la página
        mostrarEnPagina();
    </script>
</body>
