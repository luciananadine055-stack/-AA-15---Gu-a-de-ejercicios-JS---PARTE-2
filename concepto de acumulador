<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Contador de Notas</title>
    <style>
        body { 
            font-family: Arial, sans-serif; 
            max-width: 500px; 
            margin: 50px auto; 
            padding: 20px; 
        }
        .input-group { 
            margin: 10px 0; 
        }
        input { 
            width: 100%; 
            padding: 8px; 
            margin: 5px 0; 
            border: 1px solid #ddd;
        }
        button { 
            background: #0984e3; 
            color: white; 
            padding: 10px; 
            border: none; 
            width: 100%; 
            cursor: pointer;
            margin: 10px 0;
        }
        .result { 
            margin-top: 20px; 
            padding: 15px; 
            text-align: center;
        }
        .mayores { 
            background: #00b894; 
            color: white; 
            padding: 10px;
            margin: 5px;
        }
        .menores { 
            background: #e17055; 
            color: white; 
            padding: 10px;
            margin: 5px;
        }
        .contador {
            font-size: 24px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h2>Contador de Notas - 10 Alumnos</h2>
    <p>Ingrese 10 notas de alumnos (0-10):</p>
    
    <div id="inputs-container"></div>
    
    <button onclick="procesarNotas()">Calcular Resultados</button>
    
    <div id="resultado" class="result"></div>

    <script>
        // Crear 10 inputs para las notas
        const container = document.getElementById('inputs-container');
        for (let i = 1; i <= 10; i++) {
            const div = document.createElement('div');
            div.className = 'input-group';
            div.innerHTML = `
                <label>Alumno ${i}:</label>
                <input type="number" id="nota${i}" min="0" max="10" step="0.1" placeholder="Nota ${i}">
            `;
            container.appendChild(div);
        }

        function procesarNotas() {
            // ACUMULADORES
            let contadorMayores = 0;  // Acumulador para notas >= 7
            let contadorMenores = 0;  // Acumulador para notas < 7
            
            // Procesar las 10 notas
            for (let i = 1; i <= 10; i++) {
                let nota = parseFloat(document.getElementById(`nota${i}`).value);
                
                // Validar nota
                if (isNaN(nota) || nota < 0 || nota > 10) {
                    alert(`La nota del alumno ${i} no es válida`);
                    return;
                }
                
                // ESTRUCTURA CONDICIONAL con ACUMULADORES
                if (nota >= 7) {
                    contadorMayores++;  // Incrementar acumulador de mayores
                } else {
                    contadorMenores++;  // Incrementar acumulador de menores
                }
            }
            
            // Mostrar resultados
            const resultado = document.getElementById('resultado');
            resultado.innerHTML = `
                <div class="mayores">
                    <h3>Notas ≥ 7</h3>
                    <div class="contador">${contadorMayores} alumnos</div>
                </div>
                <div class="menores">
                    <h3>Notas < 7</h3>
                    <div class="contador">${contadorMenores} alumnos</div>
                </div>
                <p><strong>Total de alumnos: ${contadorMayores + contadorMenores}</strong></p>
            `;
        }
    </script>
</body>
</html>
